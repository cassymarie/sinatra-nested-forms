<h1>Display your Pirate here</h1>
<div class="pirate">
  <h3>Name: <%= @pirate.name %></h3><br>
  <h4>Weight: <%= @pirate.weight %></h4>
  <h4>Height: <%= @pirate.height %></h4>
</div><br>

<h2>Display your first ship here</h2>

<%@ships.each do |boat|%>
  <div class="ship">
    <h3>Name: <%= boat.name %></h3><br>
    <h4>Type: <%= boat.type %></h4>
    <h4>Booty: <%= boat.booty %></h4>
  </div><br>
<%end%>